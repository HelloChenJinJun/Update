<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_fragment_other_news_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.commonlibrary.baseadapter.SuperRecyclerView
            android:id="@+id/srcv_fragment_other_news_list_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="skin"
            android:background="@color/custom_color_app_content_bg"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>